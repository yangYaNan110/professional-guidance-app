{
  "version": "1.0.0",
  "created_at": "2026-01-25T10:00:00Z",
  "description": "推荐大学模块Skill执行配置",
  "project_name": "recommendation_university_module",
  "execution_phases": [
    {
      "phase_id": "phase_1",
      "name": "数据层建设",
      "duration_hours": 24,
      "tasks": [
        {
          "task_id": "task_1_1",
          "name": "录取分数数据爬取",
          "agent": "data_agent",
          "skill": "data-crawler",
          "priority": 1,
          "dependencies": [],
          "input_parameters": {
            "target_sources": ["阳光高考", "各省教育考试院"],
            "data_types": ["university_admission_scores"],
            "crawl_scope": "selective",
            "business_module": "推荐大学模块",
            "anti_detection": true
          },
          "expected_output": {
            "crawled_data_count": ">2000",
            "data_quality_score": ">95%",
            "delivery_status": "ready_for_db_expert"
          },
          "acceptance_criteria": {
            "data_source_traceability": "100%",
            "data_completeness": ">95%",
            "duplicate_rate": "<1%",
            "data_format_compliance": "100%"
          }
        },
        {
          "task_id": "task_1_2",
          "name": "数据库优化和数据验证",
          "agent": "db_expert",
          "skill": "database-optimization",
          "priority": 2,
          "dependencies": ["task_1_1"],
          "input_parameters": {
            "source_data": "task_1_1_output.json",
            "validation_rules": ["completeness", "uniqueness", "business_logic"],
            "performance_requirements": ["query_time<200ms", "index_hit_rate>90%"],
            "index_types": ["recommend_composite", "university_major_score", "score_range"]
          },
          "expected_output": {
            "validation_status": "passed",
            "index_hit_rate": ">90%",
            "query_performance": "<200ms",
            "data_consistency": "100%"
          },
          "acceptance_criteria": {
            "query_performance": "<200ms",
            "index_hit_rate": ">90%",
            "data_consistency": "100%",
            "backup_integrity": "100%"
          }
        }
      ],
      "deliverables": [
        "录取分数原始数据",
        "数据质量验证报告",
        "数据库索引优化方案",
        "性能基准测试结果"
      ]
    },
    {
      "phase_id": "phase_2",
      "name": "后端API开发",
      "duration_hours": 48,
      "tasks": [
        {
          "task_id": "task_2_1",
          "name": "推荐API开发",
          "agent": "backend_agent",
          "skill": "backend-api",
          "priority": 1,
          "dependencies": ["task_1_2"],
          "input_parameters": {
            "database_schema": "latest_version",
            "business_requirements": {
              "scenarios": ["A", "B", "C"],
              "api_endpoints": [
                "/api/v1/universities/recommend",
                "/api/v1/universities/{university_id}/detail"
              ]
            },
            "interface_specifications": {
              "request_format": "json",
              "response_format": "json",
              "authentication": "none"
            },
            "performance_targets": {
              "response_time_p95": "<500ms",
              "response_time_p99": "<1s",
              "error_rate": "<1%"
            }
          },
          "expected_output": {
            "restful_apis": "implemented",
            "api_documentation": "complete",
            "performance_test_results": "passed"
          },
          "acceptance_criteria": {
            "api_response_p95": "<500ms",
            "api_response_p99": "<1s",
            "error_rate": "<1%",
            "cache_hit_rate": ">80%"
          }
        },
        {
          "task_id": "task_2_2",
          "name": "智能推荐算法优化",
          "agent": "ai_ml_agent",
          "skill": "ai-recommend",
          "priority": 1,
          "dependencies": ["task_1_2"],
          "input_parameters": {
            "training_data": "university_admission_scores",
            "algorithm_requirements": {
              "recommendation_type": "university_recommendation",
              "scenarios": ["A", "B", "C"],
              "matching_rules": {
                "score_matching": "user_score ± 30",
                "professional_matching": "direct > related > interdisciplinary > fallback",
                "level_priority": "985 > 211 > double_first_class > provincial_key"
              }
            },
            "accuracy_targets": {
              "recommendation_accuracy": ">85%",
              "coverage_rate": ">90%"
            }
          },
          "expected_output": {
            "recommendation_engine": "optimized",
            "algorithm_performance": {
              "accuracy": ">85%",
              "coverage": ">90%"
            }
          },
          "acceptance_criteria": {
            "recommendation_accuracy": ">85%",
            "recommendation_coverage": ">90%",
            "response_time": "<100ms",
            "model_explainability": "high"
          }
        }
      ],
      "deliverables": [
        "推荐API接口",
        "API文档",
        "智能推荐算法",
        "性能测试报告"
      ]
    },
    {
      "phase_id": "phase_3",
      "name": "前端界面开发",
      "duration_hours": 24,
      "tasks": [
        {
          "task_id": "task_3_1",
          "name": "推荐界面开发",
          "agent": "frontend_agent",
          "skill": "frontend-web",
          "priority": 1,
          "dependencies": ["task_2_1", "task_2_2"],
          "input_parameters": {
            "api_documentation": "task_2_1_output.json",
            "ui_requirements": {
              "pages": ["university_recommendation"],
              "components": ["search_form", "university_groups", "university_cards"],
              "responsive_design": true
            },
            "performance_targets": {
              "page_load_time": "<3s",
              "interaction_response": "<1s"
            },
            "device_compatibility": ["desktop", "tablet", "mobile"]
          },
          "expected_output": {
            "web_application": "functional",
            "component_library": "complete",
            "performance_metrics": "meets_requirements"
          },
          "acceptance_criteria": {
            "page_load_time": "<3s",
            "interaction_response": "<1s",
            "cross_browser_compatibility": "100%",
            "accessibility_score": ">90%"
          }
        }
      ],
      "deliverables": [
        "推荐大学页面",
        "响应式组件库",
        "用户体验优化"
      ]
    },
    {
      "phase_id": "phase_4",
      "name": "集成测试",
      "duration_hours": 12,
      "tasks": [
        {
          "task_id": "task_4_1",
          "name": "端到端测试",
          "agent": "coordinator",
          "skill": "coordinator-integrate",
          "priority": 1,
          "dependencies": ["task_3_1"],
          "input_parameters": {
            "agent_outputs": {
              "data_agent": "task_1_1",
              "db_expert": "task_1_2",
              "backend_agent": "task_2_1",
              "ai_ml_agent": "task_2_2",
              "frontend_agent": "task_3_1"
            },
            "integration_requirements": {
              "test_scenarios": ["A", "B", "C"],
              "performance_tests": true,
              "compatibility_tests": true
            },
            "test_scenarios": [
              {
                "scenario": "A",
                "input": {"major": "人工智能", "province": "江苏", "score": 620},
                "expected_groups": ["score_match", "national_match"]
              },
              {
                "scenario": "B",
                "input": {"major": "人工智能", "province": "江苏"},
                "expected_groups": ["province_match", "national_match"]
              },
              {
                "scenario": "C",
                "input": {"major": "人工智能"},
                "expected_groups": ["national_match"]
              }
            ]
          },
          "expected_output": {
            "integration_status": "success",
            "test_results": "passed",
            "deployment_package": "ready"
          },
          "acceptance_criteria": {
            "all_scenarios_working": "100%",
            "system_availability": ">99.9%",
            "performance_benchmarks": "met"
          }
        }
      ],
      "deliverables": [
        "集成测试报告",
        "部署包",
        "用户手册"
      ]
    }
  ],
  "monitoring_configuration": {
    "data_flow_monitoring": {
